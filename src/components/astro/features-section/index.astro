---
import { features } from './data';

import FeatureItem from './feature-item.astro';
import FeaturesHeader from './features-header.astro';
---

<section class="bg-muted py-24 sm:py-32" aria-labelledby="features-heading">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <FeaturesHeader
      title="Notre mission : Réussir ensemble votre alternance"
      description="Créer un réseau solidaire d'alternants, donner de la visibilité aux talents, et faciliter la mise en relation avec des entreprises engagées dans la formation professionnelle."
    />

    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
      <dl class="grid max-w-xl gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
        {
          features.map((feature) => (
            <FeatureItem title={feature.title} description={feature.description}>
              <feature.Icon slot="icon" class="size-6" aria-hidden="true" />
            </FeatureItem>
          ))
        }
      </dl>
    </div>
  </div>
</section>
