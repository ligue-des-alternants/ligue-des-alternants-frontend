---
import NewsItem from './news-item.astro';

import type News from '@/interfaces/news';

interface Props {
  news: News[];
}

const { news } = Astro.props;
---

<div
  class="border-border mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3"
>
  {news.map((item) => <NewsItem item={item} />)}
</div>
