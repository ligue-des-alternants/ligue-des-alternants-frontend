---
import { socialLinks } from './data';

const year = new Date().getFullYear();
---

<footer class="bg-background">
  <div class="container overflow-hidden py-20 sm:py-24 md:justify-between">
    <nav
      aria-label="Pied de page"
      class="-mb-6 flex flex-wrap justify-center gap-x-12 gap-y-3 text-sm/6"
    >
      <a href="/mentions-legales" class="hover:text-accent-foreground text-muted-foreground"
        >Mentions légales</a
      >
    </nav>

    <div class="mt-16 flex justify-center gap-x-10">
      {
        socialLinks.map(({ name, url, icon: Icon }) => (
          <a
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-muted-foreground hover:text-accent-foreground"
          >
            <span class="sr-only">{name}</span>
            <Icon />
          </a>
        ))
      }
    </div>

    <p class="text-muted-foreground mt-10 text-center text-sm/6">
      © {year} Ligue des Alternants - Tous droits réservés.
    </p>
  </div>
</footer>
